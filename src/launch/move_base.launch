<launch>
  <master auto="start"/>
  
  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="~/pegasus2/src/navigation_2d/maps/testmap.yaml"/>

  <!--- Run AMCL -->
  <include file="$(find amcl)/examples/amcl_omni.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find navigation_2d)/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find navigation_2d)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find navigation_2d)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find navigation_2d)/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find navigation_2d)/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
